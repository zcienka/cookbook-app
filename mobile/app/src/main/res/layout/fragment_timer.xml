<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_timer_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TimerFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/start_timer_button"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:padding="8dp"
            android:text="@string/start"
            android:backgroundTint="?attr/colorAccent"
            android:background="@drawable/round_outline_button_timer"
            android:textColor="?attr/colorOnPrimaryContainer"/>

        <TextView
            android:id="@+id/timer_value"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/timer_fragment"
            android:textSize="64sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/reset_timer_button"
                android:text="@string/pause"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:background="@drawable/round_outline_button_timer"
                android:backgroundTint="?attr/colorAccent"
                android:padding="8dp"
                android:layout_marginEnd="4dp"
                android:textColor="?attr/colorOnPrimaryContainer" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/stop_timer_button"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:background="@drawable/round_outline_button_timer"
                android:layout_marginStart="4dp"
                android:backgroundTint="?attr/colorAccent"
                android:padding="8dp"
                android:text="@string/stop"
                android:textColor="?attr/colorOnPrimaryContainer" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>